.container{style: "max-width: 360px;"}
  .card
    .card-header.text-center.fw-bold
      PADEL64
    .card-body
      -# .mt-3
      -#   = render partial: "devise/shared/social_login"
      -# .row.align-items-center.my-3
      -#   .col-5.border-top
      -#   .col-2.text-center
      -#     %small.fw-lighter.fs-6.text-secondary
      -#       o
      -#   .col-5.col-5.border-top
      %h5.card-title Crea tu cuenta
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f|
        .form-inputs
          = f.input :email,
            required: true,
            autofocus: true ,
            input_html: { autocomplete: "email" }
          = f.input :phone,
            label: "Tel√©fono",
            required: true,
            hint: "Numero de celular",
            input_html: { autocomplete: "phone" }
          = f.input :first_name,
            label: "Nombre",
            required: true,
            input_html: { autocomplete: "first_name"}
          = f.input :last_name,
            label: "Apellido",
            required: true,
            input_html: { autocomplete: "last_name" }
          %hr
          = f.input :password,
            required: true,
            hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
            input_html: { autocomplete: "new-password" }
          = f.input :password_confirmation,
            required: true,
            input_html: { autocomplete: "new-password" }
          %br
          .d-grid.gap-2
            = f.button :submit, t(".sign_up"),
              class: "btn btn-outline-secondary"
    .card-footer
      = render "devise/shared/links"
