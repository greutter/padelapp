.container{style: "max-width: 360px;"}
  .card
    .card-header.text-center.fw-bold
      PADEL64
    .card-body
      -# .mt-3
      -#   = render partial: "devise/shared/social_login"
      -# .row.align-items-center.my-3
      -#   .col-5.border-top
      -#   .col-2.text-center
