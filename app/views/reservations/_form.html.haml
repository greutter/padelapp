.card.border-primary
  .card-header.text-white.text-bg-primary
    %fs-3
      -if "reservation.pending_payment?"
        PAGO PENDIENTE
      - else
        RESERVA CONFIRMADA
  .card-body
    %h3.card-title
      #{l(reservation.starts_at, format: "%A %e %b %k:%M").capitalize} -
      #{reservation.ends_at.strftime(" %k:%M")}
      .small.fw-light
        #{reservation.duration} minutos
    %h4.card-subtitle
      = reservation.club.name
      %br
      %small.fw-light
        Cancha #{reservation.court.number}
    = link_to reservation.club.google_maps_link, target: :blank, class: "text-decoration-none link-primary" do
      %span{class: "bi bi-geo-alt-fill"}
      = reservation.club.address
  .card-footer
    .row
      - if "reservation.pending_payment?"
        .col-8
          .row
            .col-6
              .span
                .mp-cho-btn
            .col-6.text-start
              =image_tag "mercado_pago.png", class: "mercado-pago-img float-start float-middle", style: "max-width: 90px;"
        .col-4.text-end
          = link_to 'Cancelar', reservation, method: :delete, type: :button, |
                    class: "btn", data: { confirm: '¿Estás seguro de cancelar la reserva?' }
      - else
        %td
          = link_to wa_invitation_text(reservation), class: "btn btn-success",  target: :blank do
            %i{class: "fa fa-whatsapp whatsapp-icon"}
            Invitar jugadores
        %td





