:javascript
  // "TEST-bf1bb044-2358-4212-9eb3-8a9bf7999e12"
  // "#{ENV['MERCADOPAGO_TEST_PUBLIC_KEY']}"
    const mp_co = new MercadoPago("#{ENV['MERCADOPAGO_TEST_PUBLIC_KEY']}", {
          locale: 'es-CL'
    });

    // Inicializa el checkout
    window.onload = setTimeout(load_mp_button, 800);

    function load_mp_button() {
      mp_co.checkout({
          preference: {
              id: "#{@preference_id}"
          },
          render: {
                container: '.mp-cho-btn', // Indica el nombre de la clase donde se mostrará el botón de pago
                label: 'PAGAR', // Cambia el texto del botón de pago (opcional)
          }
      });
    }

.div-text-center
  = render partial: 'card', |
           locals: {reservation: @reservation}
