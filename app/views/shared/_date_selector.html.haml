
.div
  %h5.text-left
    #{l(@selected_date, format: "%B").capitalize}
  %ul.nav.nav-pills.nav-fill
    - to_date = @from_date + 4.days
    -(@from_date..to_date).each do |date|
      %li.nav-item
        - par = @params
        - par[:date] = date
        - c = "nav-link rounded-0 #{'active' if date == @selected_date}"
        = link_to url_for("#{path}?#{par.to_query}#cuando"), class: c, "data-action" => "spinner#show" do
          - if date.today?
            Hoy
            %br
            ðŸ”¥
          - else
            = l(date, format: "%a").capitalize
            %br
            .text-center= l(date, format: "%d")
  .mt-2
    .row
      .col-3.text-center
        - if @from_date != Date.today
          - par = @params 
          - par[:from_date] = @from_date - 5.day
          - par[:date] = @from_date - 5.days
      
          = link_to url_for("#{path}?#{par.to_query}#cuando"), type: :button, class: "btn", "data-action" =>"spinner#show" do
            %i.fs-3.fw-bold{class: "bi bi-arrow-left"}
            %br
            Anterior
      .col-6.text-center
        -if @from_date != Date.today
          %span.align-middle
            - par = @params 
            - par[:from_date] = Date.today
            - par[:date] = Date.today
            = link_to url_for("#{path}?#{par.to_query}#cuando"), type: :button, class: "btn btn", "data-action" =>"spinner#show" do
              Hoy
      .col-3.text-center
        - par = @params 
        - par[:from_date] = to_date + 1.day
        - par[:date] = to_date + 1.day 
        = link_to url_for("#{path}?#{par.to_query}#cuando"), type: :button, class: "btn", "data-action" =>"spinner#show" do
          %i.fs-3.fw-bold{class: "bi bi-arrow-right"}
          Siguiente