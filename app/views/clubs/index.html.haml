.container
  %h3 Â¡Los clubes en un solo lugar!

  .div.py-3
    = form_with(url: clubs_path, method: :get, data: {turbo_frame: "clubs"}) do |form|
      = form.label :query, "Busca por comuna:", class: ""
      .flex.space-x-3
        = form.collection_check_boxes :comunas, @comunas, :first, :first do |b|
          .form-check
            = b.check_box class: "form-check-input", checked: params[:comunas].include?(b.value)
            = b.label class: "form-check-label" 
            (#{@comunas[b.value]})
        = form.submit 'Search', class: "btn btn-secondary"

  - @clubs.each do |club|
    .div.py-1
      .card
        %h5.card-header
          = club.name
          %small= club.third_party_id
        .card-body
          #{club.address}
          %br
          #{club.comuna}
          %br
          = number_to_phone_cl club.phone if club.phone.length > 8